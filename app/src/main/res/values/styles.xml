<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- ���ع�������ʽ -->
    <style name="Spinner">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <!-- 导航菜单Layout样式 begin -->
    <!-- 导航菜单Layout样式 -->
    <style name="MenuItemLinerLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">55dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingRight">15dip</item>
        <item name="android:background">@drawable/menu_layout_item_selector</item>
    </style>

    <!-- 导航菜单Layout之ImageView样式 -->
    <style name="MenuItemLinerLayoutImageViewStyle">
        <item name="android:layout_width">18dip</item>
        <item name="android:layout_height">18dip</item>
        <item name="android:layout_marginRight">15dip</item>
    </style>

    <!-- 导航菜单Layout之TextView样式 -->
    <style name="MenuItemLinerLayoutTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>
    
    <!-- 导航菜单Layout样式 end -->


    <!-- 文本 - 滑动标签标题 -->
    <style name="text_slidingTabTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/selector_slide_title</item>
        <item name="android:textSize">17sp</item>
    </style>
</resources>
